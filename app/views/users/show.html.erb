<div id='page' class='contaienr col-lg-12'>
<div class='row'>
<h2>Hours Of Operation: 7AM - 9PM</h2>
<br>

<h4>Choose Date</h4>
<br>

<div class='date'>
<input class='day' type="text" data-provide='datepicker' >
</div>
</div>

<div class='row' style='margin-top:2em'>


<div class= 'listandmap'>

<div id='list' class='col-lg-6' >

</div>
<div id='map' class='col-lg-5'></div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm reservation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class='info-vl'></div>
      <%= form_with url: rental_path,id:'reservation_form' do |t| %>
      <%= t.hidden_field :local_id %>
      <%= t.hidden_field :vehicle_id %>

      </div>
      <div class="modal-footer">
        <button type="button" id="reserve" class="btn btn-primary">Reserve</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  <% end %>
      </div>
    </div>
  </div>


</div>
</div>
</div>
